@page "{currencyIn}/{currencyOut}"
@model RazorPagesModelBinding.Pages.ConvertModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Dummy Currency Converter</title>
</head>
<body>
    <h1>Convert @Model.Request.RouteValues["currencyIn"] to @Model.Request.RouteValues["currencyOut"]</h1>

    <form method="get">
        <label for="qty">Quantity:</label>
        <input id="qty" name="qty" type="number" min="0" value="1" />
        <button type="submit">Convert</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ConvertedAmount))
    {
        <p>Result: @Model.ConvertedAmount</p>
    }
</body>
</html>